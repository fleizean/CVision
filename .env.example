# Environment Configuration
ASPNETCORE_ENVIRONMENT=Development

# Database Configuration (SQL Server)
SA_PASSWORD=YourStrongPassword123!

# JWT Token Configuration  
TOKEN_SECURITY_KEY=your-super-secret-jwt-key-here-minimum-32-characters-long
TOKEN_ISSUER=your-domain.com
TOKEN_AUDIENCE=your-domain.com
TOKEN_EXPIRATION=60

# Email Configuration (SMTP)
MAIL_SETTINGS_MAIL=your-email@gmail.com
MAIL_SETTINGS_USERNAME=your-email@gmail.com
MAIL_SETTINGS_PASSWORD=your-app-password
MAIL_SETTINGS_SMTP_HOST=smtp.gmail.com
MAIL_SETTINGS_SMTP_PORT=587

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_ANALYSIS_SERVICE_URL=http://localhost:8000

# Analysis Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5