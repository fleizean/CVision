# Development Environment Configuration
ENVIRONMENT=development

# Database Configuration
POSTGRES_DB=cvisiondb_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis Configuration
REDIS_PASSWORD=redis123

# JWT Configuration (Development - DO NOT use in production)
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ISSUER=cvision-api-dev
JWT_AUDIENCE=cvision-client-dev
JWT_EXPIRE_MINUTES=120

# Email Configuration (Development)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Frontend Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_ANALYSIS_SERVICE_URL=http://localhost:8000

# Analysis Service Configuration
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_RETENTION_DAYS=7

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting (More lenient for development)
API_RATE_LIMIT=1000
LOGIN_RATE_LIMIT=50